generator client {
  provider = "prisma-client-js"
}

datasource db  {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  MANAGER
}

model Account {
  id                       String  @id @default(uuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model User {
  id String             @id @unique @default(uuid())
  firstname String?
  lastname String?
  username String       @unique
  phone String    @unique
  role Role             @default(USER)
  avatar String?
  sessionProgress SessionProgress[]   @relation("SessionProgress")

  courses        UserCourse[]     @relation("UserCourses")

  createAt DateTime     @default(now())
  updatedAt DateTime    @updatedAt

  accounts      Account[]
  instructor    Instructor?
  comments      Comment[]
  questions     Question[]
}

enum CourseLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  BEGINNER_INTERMEDIATE
  INTERMEDIATE_ADVANCED
}

enum CourseStatus {
  COMPLETED
  IN_PROGRESS
}

model Course {
  id               Int           @id @unique @default(autoincrement())
  title            String
  subtitle         String
  shortDescription String?
  description      String
  cover            String
  price            Int?        // قیمت پایه (در صورت نیاز)
  isHighPriority   Boolean       @default(false)
  shortAddress     String        @unique
  sessionCount     Int           @default(0)
  duration         Int           @default(0)
  level            CourseLevel
  participants     Int           @default(0)
  rating           Float?        @default(5.0)
  status           CourseStatus
  activeStatus     Boolean       @default(false)
  instructorId     Int
  instructor       Instructor    @relation(fields: [instructorId], references: [id])
  introVideoUrl    String?
  courseTerms      CourseTerm[]  @relation("CourseToTerms") // ارتباط با ترم‌ها
  comments         Comment[]
  questions        Question[]
  users            UserCourse[]  @relation("UserCourses")
  createAt         DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}



model UserCourse {
  id           Int       @id @default(autoincrement())
  userId       String
  courseId     Int
  purchasedAt  DateTime  @default(now())
  status       PurchaseStatus @default(ACTIVE)

  user         User      @relation("UserCourses", fields: [userId], references: [id])
  course       Course    @relation("UserCourses", fields: [courseId], references: [id])

  @@unique([userId, courseId]) // Prevent repeated purchase of a course by a user
}

enum PurchaseStatus {
  ACTIVE
  CANCELLED
  EXPIRED
}

model Term {
  id            Int       @id @unique @default(autoincrement())
  name          String
  subtitle      String?
  duration      Int       @default(0)
  price         Int     @default(0)  // قیمت ترم
  discount      Int?    @default(0)  // درصد تخفیف ترم
  sessions      Session[] @relation("TermToSessions") // جلسات ترم
  courseTerms   CourseTerm[] @relation("TermToCourses") // ارتباط با دوره‌ها
  createAt      DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}
model CourseTerm {
  id           Int      @id @unique @default(autoincrement())
  courseId     Int
  termId       Int
  isOptional   Boolean  @default(false) // نشان‌دهنده اختیاری بودن ترم در دوره
  course       Course   @relation("CourseToTerms", fields: [courseId], references: [id])
  term         Term     @relation("TermToCourses", fields: [termId], references: [id])
  createAt     DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([courseId, termId]) // جلوگیری از ارتباط تکراری یک ترم با یک دوره
}
model Session {
  id             String           @id @unique @default(uuid())
  name           String
  duration       Int
  termId         Int
  order          Int              @default(0)
  term           Term             @relation("TermToSessions", fields: [termId], references: [id])
  isFree         Boolean          @default(false)
  isActive       Boolean          @default(false)
  video          SessionVideo?    @relation("SessionToVideo", fields: [videoId], references: [id])
  videoId        Int?             @unique
  sessionProgress SessionProgress[] @relation("SessionProgress")
  questions      Question[]
  createAt       DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

model SessionVideo {
  id            Int              @id @unique @default(autoincrement())
  videoKey      String            // .m3u8
  accessLevel   VideoAccessLevel @default(REGISTERED) 
  status        VideoStatus      @default(AVAILABLE)
  session       Session?         @relation("SessionToVideo")
  createAt      DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
}


model SessionProgress {
  id                  Int          @id @default(autoincrement())
  userId              String       // ID of the user
  sessionId           String       // ID of the session
  isCompleted         Boolean      @default(false) // Flag indicating if the session is marked as completed by the user
  
  // Relations
  user                User         @relation("SessionProgress", fields: [userId], references: [id])
  session             Session      @relation("SessionProgress", fields: [sessionId], references: [id])

  createAt            DateTime     @default(now())
  updatedAt           DateTime     @updatedAt

  @@unique([userId, sessionId]) // Ensures each user has only one progress entry per session
}

model Question {
  id            String   @id @default(uuid())             // شناسه یکتا
  userId        String                                    // شناسه کاربر
  courseId      Int                                       // شناسه دوره
  sessionId     String                                    // شناسه جلسه
  questionText  String   @db.Text                         // متن سوال
  createdAt     DateTime @default(now())                  // تاریخ ایجاد
  updatedAt     DateTime @updatedAt                       // تاریخ آخرین تغییر

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)  // ارتباط با مدل User
  course        Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)  // ارتباط با مدل Course
  session       Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)  // ارتباط با مدل Session
}


model Instructor {
  id          Int      @id @unique @default(autoincrement())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  describe    String?
  bio         String?
  skills      String?

  createAt    DateTime @default(now())
  updatedAt   DateTime @updatedAt

  courses     Course[] 
}

enum CommentStatus {
  PENDING 
  APPROVED 
  REJECTED 
}

model Comment {
  id         Int      @id @default(autoincrement())
  content    String
  userId     String
  courseId   Int?     
  articleId  Int?    
  parentId   Int?
  status     CommentStatus @default(PENDING)     
  replies    Comment[] @relation("CommentReplies")
  parent     Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  
  user       User     @relation(fields: [userId], references: [id]) 
  course     Course?  @relation(fields: [courseId], references: [id]) 
  article    Article? @relation(fields: [articleId], references: [id]) 

  createAt DateTime     @default(now())
  updatedAt DateTime    @updatedAt
}

model Article {
  id          Int       @id @default(autoincrement())
  title       String
  content     String
  comments    Comment[] 

  createAt DateTime     @default(now())
  updatedAt DateTime    @updatedAt
}

model VerificationCode {
  id            Int      @id @default(autoincrement())
  phone         String   @unique
  code          Int
  expiresAt     DateTime
}

model FAQ {
  id        Int      @id @default(autoincrement()) 
  question  String  
  answer    String  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 
}


// Enum for video access levels
enum VideoAccessLevel {
  PUBLIC       // Video is accessible to everyone
  REGISTERED   // Only registered users can view
  PURCHASED     // Only users who have purchased the course can view
}

// Enum for video status
enum VideoStatus {
  AVAILABLE    // Video is available for viewing
  UNAVAILABLE   // Video is not currently available
}

